@model RandevuApp.ViewModels.RegisterViewModel

<h2>Kayıt Ol</h2>
<form asp-action="Register">
    <input asp-for="FullName" placeholder="Ad Soyad" />
    <input asp-for="Email" placeholder="E-posta" />
    <input asp-for="Password" type="password" placeholder="Şifre" />
    <input asp-for="ConfirmPassword" type="password" placeholder="Şifre Tekrar" />
    <button type="submit">Kayıt Ol</button>
</form>
