@model RandevuApp.Models.Appointment

<form asp-action="Edit">
    <div class="form-group">
        <label for="AppointmentDate">Randevu Tarihi</label>
        <input type="datetime-local" class="form-control" id="AppointmentDate" asp-for="AppointmentDate" />
    </div>

    <div class="form-group">
        <label for="ServiceId">Hizmet</label>
        <select asp-for="ServiceId" class="form-control" asp-items="@(new SelectList(ViewBag.Services, "Id", "Name"))"></select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Randevuyu Güncelle</button>
    </div>
</form>
